            <span id="resolution"></span>
        </div>


        <div id=rightbottom>
            <h3>
                <%= gamesInitialized %>
                <%if (gamesInitialized != 1) { %>
                games
                <% } else { %>
                game
                <% } %>
                initialized,
                <%= gamesCompleted %>
                completed
            </h3>
            <h3 id=visits></h3>
            <!--<div id="GameStatistics"> Games currently being plyed:</div>-->
